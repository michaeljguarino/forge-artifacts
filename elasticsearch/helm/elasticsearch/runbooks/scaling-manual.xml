<root gap='medium'>
    <box pad='small' gap='medium' direction='row' align='center'>
        <button label='Scale' action='scale' primary='true' headline='true' />
        <box direction='row' align='center' gap='small'>
            <box gap='small' align='center'>
                <timeseries datasource="elastic-operator-cpu" label="Elasticsearch Operator CPU Usage" />
                <text size='small'>You should set a reservation to
                    roughly correspond to 60% utilization</text>
            </box>
            <box gap='small' align='center'>
                <timeseries datasource="elastic-operator-memory" label="Elasticsearch Operator Memory Usage" />
                <text size='small'>You should set a reservation to
                    roughly correspond to 80% utilization</text>
            </box>
        </box>
        <box gap='xsmall'>
            <box gap='xsmall'>
                <input placeholder="250m" label='Elasticsearch Operator CPU Request' name='elastic-operator-cpu'>
                    <valueFrom
                            datasource="elastic-operator"
                            doc="kubernetes.raw"
                            path="spec.template.spec.containers[0].resources.requests.cpu" />
                </input>
                <input placeholder="1Gi" label='Elasticsearch Operator Memory Request' name='elastic-operator-memory'>
                    <valueFrom
                            datasource="elastic-operator"
                            doc="kubernetes.raw"
                            path="spec.template.spec.containers[0].resources.requests.memory" />
                </input>
            </box>
        </box>
    </box>
    <box pad='small' gap='medium' direction='row' align='center'>
        <box direction='row' align='center' gap='small'>
            <box gap='small' align='center'>
                <timeseries datasource="elasticsearch-es-cpu" label="Elasticsearch ES CPU Usage" />
                <text size='small'>You should set a reservation to
                    roughly correspond to 60% utilization</text>
            </box>
            <box gap='small' align='center'>
                <timeseries datasource="elasticsearch-es-memory" label="Elasticsearch ES Memory Usage" />
                <text size='small'>You should set a reservation to
                    roughly correspond to 80% utilization</text>
            </box>
        </box>
        <box gap='xsmall'>
            <box gap='xsmall'>
                <input placeholder="250m" label='Elasticsearch Operator CPU Request' name='elasticsearch-es-cpu'>
                    <valueFrom
                            datasource="elastic-es"
                            doc="kubernetes.raw"
                            path="spec.template.spec.containers[0].resources.requests.cpu" />
                </input>
                <input placeholder="1Gi" label='Elasticsearch Operator Memory Request' name='elasticsearch-es-memory'>
                    <valueFrom
                            datasource="elastic-es"
                            doc="kubernetes.raw"
                            path="spec.template.spec.containers[0].resources.requests.memory" />
                </input>
            </box>
        </box>
    </box>
    <box pad='small' gap='medium' direction='row' align='center'>
        <box direction='row' align='center' gap='small'>
            <box gap='small' align='center'>
                <timeseries datasource="kibana-cpu" label="Kibana CPU Usage" />
                <text size='small'>You should set a reservation to
                    roughly correspond to 60% utilization</text>
            </box>
            <box gap='small' align='center'>
                <timeseries datasource="kibana-memory" label="Kibana Memory Usage" />
                <text size='small'>You should set a reservation to
                    roughly correspond to 80% utilization</text>
            </box>
        </box>
        <box gap='xsmall'>
            <box gap='xsmall'>
                <input placeholder="250m" label='Kibana CPU Request' name='kibana-cpu'>
                    <valueFrom
                            datasource="kibana"
                            doc="kubernetes.raw"
                            path="spec.template.spec.containers[0].resources.requests.cpu" />
                </input>
                <input placeholder="1Gi" label='Kibana Memory Request' name='elasticsearch-es-memory'>
                    <valueFrom
                            datasource="kibana"
                            doc="kubernetes.raw"
                            path="spec.template.spec.containers[0].resources.requests.memory" />
                </input>
            </box>
        </box>
    </box>
    <box width='100%' gap='small'>
        <text size='small'>Be sure to scale your dagster components within your node's capacity, listed here:</text>
        <table width='100%' datasource='nodes' path='nodes'>
            <tableColumn path='metadata.name' header='name' width='33%' />
            <tableColumn path='status.capacity.cpu' header='cpu' width='33%' />
            <tableColumn path='status.capacity.memory' header='memory' width='33%' />
        </table>
    </box>
</root>