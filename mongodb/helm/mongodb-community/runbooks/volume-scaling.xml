<root gap='medium'>
  <box pad='small' gap='medium' direction='row' align='center'>
    <box direction='row' align='center' gap='small'>
      <box gap='small' align='center'>
        <timeseries datasource="mongo-volume" label="Mongo Volume Usage" />
        <text size='small'>You should probably give yourself at least 30% headroom, depending on growth of usage</text>
      </box>
    </box>
    <box gap='small'>
      <box gap='xsmall'>
        <input placeholder="20Gi" label='Mongo Volume Size' name='mongo-storage'>
          <valueFrom
            datasource="mongo" 
            doc="kubernetes.raw" 
            path="spec.volumeClaimTemplates[0].spec.resources.requests.storage" />
        </input>
      </box>
      <box direction='row' justify='end'>
        <button label='Scale' action='volume-scale' primary='true' />
      </box>
    </box>
  </box>
</root>